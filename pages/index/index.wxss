/**index.wxss**/
page {
  background: #EFEFEF;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.userinfo {
  /* 注意这里应用了全局样式，在app.wxss中可查看 */
  margin: 40rpx 0rpx;
} 

/* 要注意微信小程序的button消除边框只能通过button::after{border: none;}形式去消除 */
.userinfo-nickname::after{
  border: none; 
}

.textHintView{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: white;
}

.textHint{
  width: 80%;
  padding: 0rpx 10rpx;
  text-align: center;
  display: inline-block; 
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.challengerNum{
  color: red;
}

.directionImage{
  width: 30rpx;
  height: 40rpx;
  display: inline-block; 
  float: right;
  margin: 20rpx;
}

.selectionTraining,.additionalItems{
  width: 80%;
  height: 240rpx;
  padding: 2%; 
  display: flex;
  flex-direction: row;
}

.singleTraining,.randomMatch,.teamReplies,.sendGifts{
  color: white;
  border: 1px solid #CCC;
  border-radius: 20rpx;
  text-align: center;
}

.singleTraining{
  margin-right: 5%;
  background: rgba(0,139,0,1);
  position: relative;
}

.singleTrainningImg,.randomMatchImg,.teamRepliesImg,.sendGiftsImg{
  margin: 20rpx 0rpx;
  width: 80%;
  height: 140rpx;
  border-radius: 20rpx;
}

.text{
  display: block;
  line-height: 36rpx;
  margin-top: -10rpx;
}

.randomMatch{
  background: rgba(238,153,34,1);
}

.teamReplies{
  background: #FF4500;
  margin-right: 5%;
}

.sendGifts{
  background: rgb(0, 100, 100);
}

.suggestion{
  width: 100%;
  height: 80rpx;
  text-align: center;
  color: #333;
  position: fixed;
  bottom: 30rpx;
}

.editIcon{
  width: 24px;
  height: 24px;
  margin-right: 30rpx;
  vertical-align: middle;
}
