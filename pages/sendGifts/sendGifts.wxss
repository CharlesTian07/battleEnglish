page {
  background: #efefee;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.contributerInfo {
  width: 100%;
  height: 140rpx;
  background-color: white;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.contributer-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.contirbuterContent {
  height: 140rpx;
  line-height: 140rpx;
  font-size: 32rpx;
  position: absolute;
  right: 30rpx;
}

.contributeVideoNum {
  font-size: 40rpx;
  color: red;
}

.contributionTips {
  width: 95%;
  padding-left: 5%;
  margin-top: 50rpx;
}

.videoList {
  width: 90%;
  padding: 0 5%;
  margin-top: 50rpx;
  border-radius: 10rpx;
  background: white;
  overflow: hidden;
}

.videoContent {
  width: 96%;
  padding: 2%;
  margin: 20rpx 0;
  background: #efeefe;
  border-top: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  border-radius: 10rpx;
}

.videoSelectedStyle{
  background: #1AAD16;
  color: white;
  border-top: 1rpx solid #1AAD16;
  border-bottom: 1rpx solid #1AAD16;
}

.relativeVideo {
  width: 360rpx;
  height: 200rpx;
}

.giftBlock {
  width: 100%;
  position: fixed;
  bottom: 1%;
  left: 0;
}

.differentGifts {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.differentGifts .item {
  flex: 0 0 24%;
  text-align: center;
  color: white;
  background-color: rgba(255,100,97,1);
  line-height: 130rpx;
  border: 1rpx solid #fff;
}
