/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

.userinfo {
  height: 140rpx;
  width: 100%;
  background: #FFF;
  text-align: center;
  border: 1px solid rgba(0, 0, 0, .1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center; 
  transition: all 300ms ease;
  position: relative;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
} 

.userinfo-nickname {
  font-size: 32rpx;
}
